{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "jsx": "react-jsx",
        "noEmitOnError": true,
        "outDir": "lib",
        "sourceMap": true,
        "target": "es6",
        "lib": ["es2015", "dom"]
    },
    "exclude": ["node_modules", "dist", "lib", "lib-amd"],
    "ts-node": {
        "files": true
    }
}
