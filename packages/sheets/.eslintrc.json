{
  "root": true,
  "env": {
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "ignorePatterns": ["dist/"],
  "overrides": [
    {
      "files": ["src/**/*.ts"],
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}